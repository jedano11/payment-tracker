{
  "name": "ReactNativePlatform",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest --coverage",
    "lint": "eslint .",
    "flow": "flow focus-check",
    "eslint": "eslint",
    "prettier": "prettier",
    "react-devtool": "react-devtools",
    "redux-devtool": "remotedev",
    "log:android": "react-native log-android",
    "log:ios": "react-native log-ios",
    "fmt": "prettier --config .prettierrc.yml --write \"{!(node_modules),!(__mock__)/**/}*.{jsx,js,json,md,ts}\""
  },
  "dependencies": {
    "@react-native-community/netinfo": "^4.4.0",
    "axios": "^0.19.0",
    "moment": "^2.24.0",
    "react": "16.9.0",
    "react-devtools": "^4.2.0",
    "react-native": "0.61.2",
    "react-native-config": "^0.11.7",
    "react-native-console-time-polyfill": "^1.2.1",
    "react-native-extended-stylesheet": "^0.12.0",
    "react-native-gesture-handler": "^1.4.1",
    "react-native-reanimated": "^1.3.0",
    "react-navigation": "^4.0.10",
    "react-navigation-stack": "^1.10.2",
    "react-navigation-tabs": "^2.5.6",
    "react-redux": "^7.1.1",
    "redux": "^4.0.4",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.1.1",
    "reselect": "^4.0.0",
    "validator": "^11.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/runtime": "^7.6.3",
    "@react-native-community/eslint-config": "^0.0.5",
    "babel-jest": "^24.9.0",
    "eslint": "^6.5.1",
    "flow-bin": "^0.111.3",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "metro-react-native-babel-preset": "^0.56.0",
    "prettier": "^1.19.1",
    "react-test-renderer": "16.9.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{jsx,js}": [
      "flow focus-check",
      "eslint --fix",
      "git add"
    ],
    "*.{jsx,js,json,md,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|@?react-navigation)"
    ],
    "collectCoverageFrom": [
      "app/redux/**/*.{js,jsx}",
      "!app/redux/**/*.action.{js,jsx}",
      "!app/redux/combinedReducers.js",
      "!app/redux/rootSaga.js"
    ]
  }
}
